<!DOCTYPE html>
<html lang="en">

<!-- LLAMO AL HEAD DE PARTIALS-->

<%- include('../partials/head', { title: 'Crear producto'}) %>

<body>

    <!-- LLAMO AL HEADER DE PARTIALS-->

    <%- include('../partials/header') %> 

 
    <main>
        
        <!-- FORMULARIO DE CREACION DEL PRODUCTO -->

        <div class="register-container">

              <!-- TITULO DEL REGISTRO-->
              
              
              <form action="../products/" method="POST" enctype="multipart/form-data">

                <div class="registration-title"> Ingresá los datos para crear el producto</div>
              
                <!-- CAMPOS A COMPLETAR DEL NOMBRE, DESCRIPCION PRINCIPAL Y SECUNDARIA DEL PRODUCTO -->
              
                <div class="field">
                  <label for="name">Nombre del producto:</label>
                  <input type="text" name="name" id="name" required minlenght="1" class="input">
                </div>
              
                
                <div class="field">
                  <label for="mainDescription">Descripción principal:</label>
                  <textarea name="mainDescription" id="mainDescription" required minlenght="1" class="input"></textarea> 
                </div>


                <div class="field">
                  <label for="secondaryDescription">Descripción secundaria:</label>
                  <textarea name="secondaryDescription" id="secondaryDescription" required minlenght="1" class="input"></textarea> 
                </div>
              

              
               
              
              
               <!-- CAMPOS A COMPLETAR DE LA IMAGEN, CATEGORIA DEL PRODUCTO, TIPO DE PRECIO, PRECIO Y DESCUENTO -->
              
               <div class="field">
                <input type="file" name="newProductImage">
              </div>

                <div class="field">
                  <label for="category">Categoría de productos</label>
                  <select name="category" required class="input" >
                    <option disabled hidden selected>Seleccionar categoría</option>
                    <option value="electric-car">Autos</option>
                    <option value="accesory">Accesorios</option>
                  </select>
                </div> 

                <div class="field">
                  <label for="status" class="form-label">Estado del producto</label>
                  <select name="status" id="status" required class="input">
                    <option disabled hidden selected>Seleccionar estado del producto</option>
                    <option value="in-sale">En oferta</option>
                    <option value="last-visited">Últimos visitados</option>
                  </select>
                </div>
                
                <div class="field">
                  <label for="price">Precio</label>
                  <input type="number" step="0.01" name="price" id="price" required class="input">     
                </div>
              
                <div class="field">
                  <label for="discount">Descuento: </label>
                  <input type="number" step="0.01" name="discount" id="discount" required class="input">     
                </div>
              
                <!-- BOTONES PARA INGRESAR Y CANCELAR REGISTRO -->
                
                <div class="login-cancel-button">

                  <button type="submit" required class="registration-button">Ingresar</button>
              
                  <button type="reset" required class="registration-button">Cancelar</button>
                
                 </div>
                
                  
              </form>
        
        </div>
         
    </main>
   
    <!-- LLAMO AL FOOTER DE PARTIALS-->

    <%- include('../partials/footer') %> 

    
</body>

</html>