<!DOCTYPE html>
<html lang="en">

    <!-- LLAMO AL HEAD DE PARTIALS-->

    <%- include('./partials/head', { title: 'PÃ¡gina principal'}) %>

<body>

    <!-- LLAMO AL HEADER DE PARTIALS-->

    <%- include('./partials/header') %>

    <main class="">

        <p class="info"> <i class="hoja fas fa-leaf"></i> Productos con impacto positivo <i class="bateria fas fa-battery-three-quarters"></i></p>

        
        <div class="container products-wrapper">
            <div class="row">

                <div class="col-12">

                    <h2 class="products-title">Accesorios</h2>
                </div>

                <!-- Accesorios -->

                <% products.forEach(product => {%>
                    <% if(product.category == "accesory"){ %> 
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="/products/list/<%=product.id%>">
                                    <figure class="product-box_image">
                                        <img src="/images/productos/<%=product.image%> " alt="imagen de producto">
                                    </figure>
                                    <article class="product-box_data">
                                        <h2>$<%= product.price %>  </h2>
                                        <span><%= product.discount %>  % OFF</span>
                                        <p><%= product.name %></p>
                                        <i class="hoja fas fa-leaf"></i>
                                    </article>
                                </a>
                            </section>
                        </div>
                    <%}%>     
                <%});%> 

            </div>
        </div>
        <!-- /accesorios -->
        
        <div class="corte"> </div>

        <!-- Autos Electricos -->

        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Autos Electricos</h2>
                </div>
                <% products.forEach(product => {%>
                    <% if(product.category == "electric-car"){ %> 
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="/products/list/<%= product.id%>">
                                    <figure class="product-box_image">
                                        <img src="/images/productos/<%= product.image %> " alt="imagen de producto">
                                    </figure>
                                    <article class="product-box_data">
                                        <h2>$<%= product.price %>  </h2>
                                        <span><%= product.discount %>  % OFF</span>
                                        <p><%= product.name %> </p>
                                        <i class="hoja fas fa-leaf"></i>
                                    </article>
                                </a>
                            </section>
                        </div>
                    <%}%>     
                <%});%> 
            </div>
        </div>
        <!-- /Autos Electricos -->
        
        <div class="corte"> </div>
        
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Productos destacados en oferta</h2>
                </div>
                <!-- Productos destacados en oferta -->
                <% products.forEach(product => {%>
                    <% if(product.status == "in-sale"){ %> 
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="/products/list/<%= product.id%>">
                                    <figure class="product-box_image">
                                        <img src="/images/productos/<%=product.image%> " alt="imagen de producto">
                                    </figure>
                                    <article class="product-box_data">
                                        <h2>$<%= product.price %>  </h2>
                                        <span><%= product.discount %>  % OFF</span>
                                        <p><%= product.name %> </p>
                                        <i class="hoja fas fa-leaf"></i>
                                    </article>
                                </a>
                            </section>
                        </div>
                    <%}%>     
                <%});%> 
            </div>
        </div>
        <!-- /Productos destacados en oferta -->

    </main>

    <!-- LLAMO AL FOOTER DE PARTIALS-->

    <%- include('./partials/footer') %> 

</body>

</html>